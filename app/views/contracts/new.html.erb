<div class="page-header">
  <%= link_to contracts_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>New contract</h1>
</div>

<div class="container">
	The house information:
	<table class="table table-bordered">
		<tr>
			<td>Address</td><td><%=@house["address"]%></td>
		</tr>
		<tr>
			<td>Province</td><td><%=@house["province"]%></td>
		</tr>
		<tr>
			<td>House owner</td><td><%=@house["user"]["display_name"]%></td>
		</tr>
		<tr>
			<td>Price</td><td><%=@house["renting_price"]%></td>
		</tr>
	</table>
</div>

<%= form_for(@contract, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @contract.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@contract.errors.count, "error") %> prohibited this contract from being saved:</h4>

      <ul>
      <% @contract.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :house_id, :value => @house["id"] %>
  <%= f.hidden_field :user_id, :value => session[:user_id] %>

  <div class="form-group">
    <%= f.label :contract_date_start, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :contract_date_start, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contract_date_end, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :contract_date_end, class: "form-control" %>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

